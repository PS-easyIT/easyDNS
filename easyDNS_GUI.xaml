<Window x:Name="MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="easyDNS Advanced" Height="800" Width="1300" 
        Background="#2c3e50">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="50"/>
            <!-- Close Button Area -->
            <RowDefinition Height="30"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header Panel -->
        <Grid Grid.Row="0" Background="#2c3e50">
            <Image x:Name="headerLogo" Height="60" Width="250" HorizontalAlignment="Left" Margin="20,10,0,0" Cursor="Hand"/>
            <TextBlock x:Name="headerLabel" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="540,15,0,0"/>
            <TextBlock Text="DNS-Server:" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="782,0,0,10" Width="78" FontSize="14" Height="25"/>
            <TextBox x:Name="txtDNSServer" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="300" Height="25" Margin="865,0,0,10"/>
            <Button x:Name="btnConnect" Content="Verbinden" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="108" Height="25" Margin="1170,0,0,10" Background="LightSkyBlue"/>
        </Grid>

        <!-- Main Content Area -->
        <TabControl x:Name="mainTabControl" Grid.Row="1" Margin="20,20,20,20">
            <!-- Tab 1: Forward Zones -->
            <TabItem Header="Forward Zones">
                <Grid>
                    <Button x:Name="btnForwardRefresh" Content="Zonen aktualisieren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="30,20,0,0" Background="LightSalmon"/>
                    <ComboBox x:Name="comboForwardZones" HorizontalAlignment="Left" VerticalAlignment="Top" Width="385" Height="25" Margin="30,60,0,0"/>
                    <TextBlock Text="Name der neuen Zone:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,120,0,0"/>
                    <TextBox x:Name="txtForwardZone" HorizontalAlignment="Left" VerticalAlignment="Top" Width="230" Height="25" Margin="185,118,0,0"/>
                    <TextBlock Text="Replikationsbereich:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,150,0,0"/>
                    <ComboBox x:Name="comboForwardScope" HorizontalAlignment="Left" VerticalAlignment="Top" Width="230" Height="25" Margin="185,148,0,0">
                        <ComboBoxItem>Domain</ComboBoxItem>
                        <ComboBoxItem>Forest</ComboBoxItem>
                        <ComboBoxItem>Legacy</ComboBoxItem>
                    </ComboBox>
                    <Button x:Name="btnForwardCreate" Content="Zone erstellen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Height="25" Margin="430,115,0,0" Background="LightGreen"/>
                    <Button x:Name="btnForwardDelete" Content="Ausgewählte Zone löschen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Height="25" Margin="430,60,0,0" Background="LightCoral"/>
                    <DataGrid x:Name="dgvForwardZones" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1180" Height="446" Margin="30,200,0,0" 
                              IsReadOnly="True" AutoGenerateColumns="False" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Zonenname" Binding="{Binding ZoneName}" Width="300"/>
                            <DataGridTextColumn Header="Typ" Binding="{Binding ZoneType}" Width="150"/>
                            <DataGridTextColumn Header="Replikationsbereich" Binding="{Binding RepScope}" Width="150"/>
                            <DataGridTextColumn Header="DNSSEC-Status" Binding="{Binding DNSSECStatus}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Tab 2: Reverse Zones -->
            <TabItem Header="Reverse Zones">
                <Grid>
                    <Button x:Name="btnReverseRefresh" Content="Zonen aktualisieren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="30,20,0,0" Background="LightSalmon"/>
                    <ComboBox x:Name="comboReverseZones" HorizontalAlignment="Left" VerticalAlignment="Top" Width="383" Height="25" Margin="30,60,0,0" RenderTransformOrigin="0.5,0.5">
                        <ComboBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="0.073"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </ComboBox.RenderTransform>
                    </ComboBox>
                    <TextBlock Text="Netzwerk-ID:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,120,0,0"/>
                    <TextBox x:Name="txtReverseNet" HorizontalAlignment="Left" VerticalAlignment="Top" Width="230" Height="25" Margin="185,118,0,0"/>
                    <TextBlock Text="Replikationsbereich:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,150,0,0"/>
                    <ComboBox x:Name="comboReverseScope" HorizontalAlignment="Left" VerticalAlignment="Top" Width="230" Height="25" Margin="185,148,0,0">
                        <ComboBoxItem>Domain</ComboBoxItem>
                        <ComboBoxItem>Forest</ComboBoxItem>
                        <ComboBoxItem>Legacy</ComboBoxItem>
                    </ComboBox>
                    <Button x:Name="btnReverseCreate" Content="Reverse-Zone erstellen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Height="25" Margin="430,118,0,0" Background="LightGreen"/>
                    <Button x:Name="btnReverseDelete" Content="Ausgewählte Zone löschen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Height="25" Margin="430,60,0,0" Background="LightCoral"/>
                    <DataGrid x:Name="dgvReverseZones" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1180" Height="346" Margin="30,200,0,0" 
                              IsReadOnly="True" AutoGenerateColumns="False" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Zonenname" Binding="{Binding ZoneName}" Width="300"/>
                            <DataGridTextColumn Header="Typ" Binding="{Binding ZoneType}" Width="150"/>
                            <DataGridTextColumn Header="Replikationsbereich" Binding="{Binding RepScope}" Width="150"/>
                            <DataGridTextColumn Header="DNSSEC-Status" Binding="{Binding DNSSECStatus}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- IP-Netzwerk-Generator -->
                    <TextBlock Text="IP-Netzwerk-Generator" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="835,65,0,0" FontWeight="Bold"/>
                    <TextBlock Text="IP-Adresse:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="835,95,0,0"/>
                    <TextBox x:Name="txtNetworkIP" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="971,90,0,0"/>
                    <TextBlock Text="CIDR:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="836,123,0,0" RenderTransformOrigin="-1.249,-0.559"/>
                    <TextBox x:Name="txtNetworkCIDR" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="25" Margin="971,118,0,0"/>
                    <Button x:Name="btnGenerateNetwork" Content="NetworkID generieren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="971,158,0,0" Background="LightSalmon"/>
                </Grid>
            </TabItem>

            <!-- Tab 3: DNS Records -->
            <TabItem Header="DNS Records">
                <Grid>
                    <TextBlock Text="Zone:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,18,0,0"/>
                    <ComboBox x:Name="comboRecZone" HorizontalAlignment="Left" VerticalAlignment="Top" Width="235" Height="25" Margin="115,13,0,0"/>
                    <Button x:Name="btnLoadZones" Content="Zonen laden" HorizontalAlignment="Left" VerticalAlignment="Top" Width="235" Height="24" Margin="115,217,0,0" Background="LightSalmon"/>
                    <TextBlock Text="Record-Typ:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,58,0,0"/>
                    <ComboBox x:Name="comboRecType" HorizontalAlignment="Left" VerticalAlignment="Top" Width="235" Height="25" Margin="115,58,0,0">
                        <ComboBoxItem>A</ComboBoxItem>
                        <ComboBoxItem>AAAA</ComboBoxItem>
                        <ComboBoxItem>CNAME</ComboBoxItem>
                        <ComboBoxItem>MX</ComboBoxItem>
                        <ComboBoxItem>PTR</ComboBoxItem>
                        <ComboBoxItem>TXT</ComboBoxItem>
                        <ComboBoxItem>SRV</ComboBoxItem>
                        <ComboBoxItem>NS</ComboBoxItem>
                    </ComboBox>
                    <TextBlock x:Name="lblRecName" Text="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,98,0,0"/>
                    <TextBox x:Name="txtRecName" HorizontalAlignment="Left" VerticalAlignment="Top" Width="235" Height="25" Margin="115,93,0,0"/>
                    <TextBlock x:Name="lblRecData" Text="Daten:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,138,0,0"/>
                    <TextBox x:Name="txtRecData" HorizontalAlignment="Left" VerticalAlignment="Top" Width="235" Height="25" Margin="115,133,0,0"/>

                    <!-- Zusätzliche Felder für MX und SRV Records -->
                    <TextBlock x:Name="lblRecordPriority" Text="Priorität:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,180,0,0" Visibility="Collapsed"/>
                    <TextBox x:Name="txtRecordPriority" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="25" Margin="160,178,0,0" Text="10" Visibility="Collapsed"/>
                    <TextBlock x:Name="lblRecordWeight" Text="Gewichtung:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,220,0,0" Visibility="Collapsed"/>
                    <TextBox x:Name="txtRecordWeight" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="25" Margin="160,218,0,0" Text="10" Visibility="Collapsed"/>
                    <TextBlock x:Name="lblRecordPort" Text="Port:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,260,0,0" Visibility="Collapsed"/>
                    <TextBox x:Name="txtRecordPort" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="25" Margin="160,258,0,0" Visibility="Collapsed"/>

                    <!-- TTL -->
                    <TextBlock x:Name="lblRecordTTL" Text="TTL (Sekunden):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,178,0,0"/>
                    <TextBox x:Name="txtRecordTTL" HorizontalAlignment="Left" VerticalAlignment="Top" Width="235" Height="25" Margin="115,173,0,0" Text="3600"/>

                    <!-- Buttons -->
                    <Button x:Name="btnRecCreate" Content="Erstellen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="117" Height="30" Margin="115,275,0,0" Background="LightGreen"/>
                    <Button x:Name="btnRecTest" Content="Testen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="113" Height="30" Margin="237,275,0,0" Background="LightSalmon"/>
                    <Button x:Name="btnRecShow" Content="Anzeigen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="117" Height="30" Margin="115,315,0,0" Background="LightSalmon"/>
                    <Button x:Name="btnRecDelete" Content="Löschen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="113" Height="30" Margin="237,315,0,0" Background="LightCoral"/>

                    <!-- DataGrid für DNS Records -->
                    <DataGrid x:Name="dgvDNSRecords" HorizontalAlignment="Left" VerticalAlignment="Top" Width="879" Height="404" Margin="365,15,0,0" 
                              IsReadOnly="True" AutoGenerateColumns="False" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Typ" Binding="{Binding Type}" Width="*"/>
                            <DataGridTextColumn Header="Daten" Binding="{Binding Data}" Width="*"/>
                            <DataGridTextColumn Header="TTL" Binding="{Binding TTL}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Ausgabe-Textbox -->
                    <TextBox x:Name="txtRecTestOutput" HorizontalAlignment="Center" VerticalAlignment="Top" Width="1234" Height="132" Margin="0,424,0,0" 
                             TextWrapping="NoWrap" VerticalScrollBarVisibility="Visible" FontFamily="Consolas" FontSize="9" IsReadOnly="True"/>
                </Grid>
            </TabItem>

            <!-- Tab 4: Import/Export -->
            <TabItem Header="Import/Export">
                <Grid>
                    <!-- Import-Bereich -->
                    <GroupBox Header="DNS-Daten importieren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="550" Height="325" Margin="30,20,0,0">
                        <Grid>
                            <TextBlock Text="Import-Datei:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,30,0,0"/>
                            <TextBox x:Name="txtImportFile" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="25" Margin="130,27,0,0"/>
                            <Button x:Name="btnBrowseImport" Content="..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="25" Margin="440,27,0,0" Background="LightGray"/>

                            <TextBlock Text="Format:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,70,0,0"/>
                            <ComboBox x:Name="comboImportFormat" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="25" Margin="130,67,0,0">
                                <ComboBoxItem>CSV</ComboBoxItem>
                                <ComboBoxItem>JSON</ComboBoxItem>
                                <ComboBoxItem>BIND Zone File</ComboBoxItem>
                                <ComboBoxItem>Tab-getrennte Werte</ComboBoxItem>
                            </ComboBox>

                            <TextBlock Text="Ziel-Zone:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,110,0,0"/>
                            <ComboBox x:Name="comboImportZone" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="25" Margin="130,107,0,0"/>

                            <CheckBox x:Name="chkCreateMissingZones" Content="Fehlende Zonen automatisch anlegen" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,150,0,0"/>
                            <CheckBox x:Name="chkOverwriteExisting" Content="Bestehende Einträge überschreiben" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,180,0,0"/>

                            <TextBlock x:Name="lblImportStatus" Text="Status: Bereit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,230,0,0" Width="500"/>
                            <Button x:Name="btnImport" Content="Importieren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="35" Margin="378,257,0,0" Background="LightGreen"/>
                        </Grid>
                    </GroupBox>

                    <!-- Export-Bereich -->
                    <GroupBox Header="DNS-Daten exportieren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="550" Height="330" Margin="650,20,0,0">
                        <Grid>
                            <TextBlock Text="Export-Datei:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,30,0,0"/>
                            <TextBox x:Name="txtExportFile" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="25" Margin="130,27,0,0"/>
                            <Button x:Name="btnBrowseExport" Content="..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="25" Margin="440,27,0,0" Background="LightGray"/>

                            <TextBlock Text="Format:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,70,0,0"/>
                            <ComboBox x:Name="comboExportFormat" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="25" Margin="130,67,0,0">
                                <ComboBoxItem>CSV</ComboBoxItem>
                                <ComboBoxItem>JSON</ComboBoxItem>
                                <ComboBoxItem>BIND Zone File</ComboBoxItem>
                                <ComboBoxItem>Tab-getrennte Werte</ComboBoxItem>
                                <ComboBoxItem>HTML</ComboBoxItem>
                            </ComboBox>

                            <TextBlock Text="Quell-Zone:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,110,0,0"/>
                            <ComboBox x:Name="comboExportZone" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="25" Margin="130,107,0,0"/>

                            <TextBlock Text="Optionen:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,150,0,0"/>
                            <CheckBox x:Name="chkExportAllZones" Content="Alle Zonen exportieren" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,150,0,0"/>
                            <CheckBox x:Name="chkIncludeReverseZones" Content="Reverse-Zonen einbeziehen" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,180,0,0"/>

                            <TextBlock x:Name="lblExportStatus" Text="Status: Bereit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,230,0,0" Width="500"/>
                            <Button x:Name="btnExport" Content="Exportieren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="35" Margin="378,262,0,0" Background="LightSalmon"/>
                        </Grid>
                    </GroupBox>

                    <!-- Vorschau-Bereich -->
                    <GroupBox Header="Vorschau" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1170" Height="196" Margin="30,350,0,0">
                        <TextBox x:Name="txtPreview" Margin="0,0,-2,0" TextWrapping="NoWrap" 
                                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                                 FontFamily="Consolas" FontSize="9" Height="170"/>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Tab 5: DNSSEC -->
            <TabItem Header="DNSSEC">
                <Grid>
                    <TextBlock Text="Zone:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,30,0,0"/>
                    <ComboBox x:Name="comboDNSSECZone" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="25" Margin="150,27,0,0"/>
                    <Button x:Name="btnDNSSECRefresh" Content="Zonen aktualisieren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="470,27,0,0" Background="LightSalmon"/>

                    <TextBlock Text="DNSSEC-Status:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,70,0,0"/>
                    <TextBox x:Name="txtDNSSECStatus" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="25" Margin="150,67,0,0" IsReadOnly="True"/>

                    <GroupBox Header="DNSSEC-Optionen für die ausgewählte Zone" HorizontalAlignment="Left" VerticalAlignment="Top" Width="585" Height="210" Margin="10,110,0,0">
                        <Grid>
                            <TextBlock Text="Signierungsalgorithmus:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,30,0,0"/>
                            <ComboBox x:Name="comboSigningAlgo" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="180,27,0,0">
                                <ComboBoxItem>RSA</ComboBoxItem>
                                <ComboBoxItem>ECDSA</ComboBoxItem>
                                <ComboBoxItem>DSA</ComboBoxItem>
                            </ComboBox>

                            <TextBlock Text="Schlüssellänge:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,70,0,0"/>
                            <ComboBox x:Name="comboKeyLength" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="180,67,0,0">
                                <ComboBoxItem>1024</ComboBoxItem>
                                <ComboBoxItem>2048</ComboBoxItem>
                                <ComboBoxItem>4096</ComboBoxItem>
                            </ComboBox>

                            <TextBlock Text="Gültigkeitsdauer (Tage):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,110,0,0"/>
                            <TextBox x:Name="txtValidity" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="180,107,0,0" Text="365"/>

                            <Button x:Name="btnEnableDNSSEC" Content="DNSSEC aktivieren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="413,106,0,0" Background="LightGreen"/>
                            <Button x:Name="btnDisableDNSSEC" Content="DNSSEC deaktivieren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="413,147,0,0" Background="LightCoral"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="DNSSEC-Schlüsselinformationen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="644" Height="210" Margin="600,110,0,0">
                        <DataGrid x:Name="dgvDNSSECKeys" Margin="0,0,-2,0" IsReadOnly="True" AutoGenerateColumns="False" SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Schlüsseltyp" Binding="{Binding KeyType}" Width="100"/>
                                <DataGridTextColumn Header="Key-Tag" Binding="{Binding KeyTag}" Width="80"/>
                                <DataGridTextColumn Header="Algorithmus" Binding="{Binding Algorithm}" Width="120"/>
                                <DataGridTextColumn Header="Erstellungsdatum" Binding="{Binding CreationDate}" Width="150"/>
                                <DataGridTextColumn Header="Ablaufdatum" Binding="{Binding ExpiryDate}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <TextBox x:Name="txtDNSSECDetails" HorizontalAlignment="Center" VerticalAlignment="Top" Width="1234" Height="210" Margin="0,336,0,0" 
                             TextWrapping="NoWrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas" FontSize="9" IsReadOnly="True"/>
                </Grid>
            </TabItem>

            <!-- Tab 6: DNS Tools -->
            <TabItem Header="DNS Tools">
                <Grid>
                    <TextBlock Text="Ziel:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,20,0,0"/>
                    <TextBox x:Name="txtToolsTarget" HorizontalAlignment="Left" VerticalAlignment="Top" Width="270" Height="25" Margin="57,18,0,0"/>
                    <Button x:Name="btnPing" Content="Ping" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="23" Margin="332,20,0,0" Background="LightSalmon"/>
                    <Button x:Name="btnTracert" Content="Tracert" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Height="23" Margin="397,20,0,0" Background="LightSalmon"/>
                    <Button x:Name="btnNslookup" Content="Nslookup" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Height="23" Margin="462,20,0,0" Background="LightSalmon" RenderTransformOrigin="-0.657,0.643"/>
                    <Button x:Name="btnClearCache" Content="Cache leeren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="23" Margin="537,20,0,0" Background="LightSalmon"/>

                    <TextBlock Text="Erweiterte Diagnosetools:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="725,20,0,0"/>
                    <Button x:Name="btnDNSFlush" Content="Client DNS-Cache leeren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Height="23" Margin="865,18,0,0" Background="LightSkyBlue"/>
                    <Button x:Name="btnDNSHealth" Content="DNS-Server Zustandsbericht" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Height="23" Margin="1030,19,0,0" Background="LightSkyBlue"/>

                    <TextBox x:Name="txtToolsOutput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1180" Height="340" Margin="30,60,0,0" 
                             TextWrapping="NoWrap" VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas" FontSize="9" IsReadOnly="True"/>

                    <GroupBox Header="DNS-Server Status" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1180" Height="141" Margin="30,405,0,0">
                        <Grid>
                            <TextBlock Text="Abfragen:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,30,0,0"/>
                            <TextBox x:Name="txtQueryCount" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="120,27,0,0" IsReadOnly="True"/>

                            <TextBlock Text="Rekursionen:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,30,0,0"/>
                            <TextBox x:Name="txtRecursions" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="400,27,0,0" IsReadOnly="True"/>

                            <TextBlock Text="Fehlgeschlagene Abfragen:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="580,30,0,0"/>
                            <TextBox x:Name="txtFailedQueries" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="740,27,0,0" IsReadOnly="True"/>

                            <TextBlock Text="Server-Laufzeit:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,70,0,0"/>
                            <TextBox x:Name="txtUptime" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="120,67,0,0" IsReadOnly="True"/>

                            <Button x:Name="btnReloadServerStatus" Content="Status aktualisieren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="994,24,0,0" Background="LightSalmon"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Tab 7: Troubleshooting - Audit -->
            <TabItem Header="Troubleshooting - Audit">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="320"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Obere Sektion - Troubleshooting -->
                    <GroupBox Header="DNS Troubleshooting" Grid.Row="0">
                        <Grid>
                            <TextBlock Text="Diagnosetools:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,30,0,0"/>
                            <Button x:Name="btnDNSDiag" Content="Server-Diagnose durchführen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="20,60,0,0" Background="LightSkyBlue"/>
                            <Button x:Name="btnZoneCheck" Content="Zonenkonfiguration prüfen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="20,100,0,0" Background="LightSkyBlue"/>
                            <Button x:Name="btnDNSSecCheck" Content="DNSSEC-Validierung prüfen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="20,140,0,0" Background="LightSkyBlue"/>
                            <Button x:Name="btnNetDiag" Content="Netzwerkdiagnose" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="20,180,0,0" Background="LightSkyBlue"/>
                            <Button x:Name="btnClearDiagEvents" Content="Diagnose-Events löschen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Margin="20,220,0,0" Background="LightCoral"/>

                            <GroupBox Header="Diagnose-Parameter" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="266" Margin="240,21,0,0">
                                <Grid>
                                    <TextBlock Text="Zone für Prüfung:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,30,0,0"/>
                                    <ComboBox x:Name="comboDiagZone" HorizontalAlignment="Left" VerticalAlignment="Top" Width="230" Height="25" Margin="150,28,0,0"/>

                                    <CheckBox x:Name="chkVerboseLogging" Content="Ausführliche Protokollierung" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,70,0,0" IsChecked="True"/>
                                    <CheckBox x:Name="chkFixIssues" Content="Probleme automatisch beheben, wenn möglich" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0"/>

                                    <TextBlock Text="Diagnose-Tiefe:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,130,0,0"/>
                                    <ComboBox x:Name="comboDiagLevel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="230" Height="25" Margin="150,128,0,0">
                                        <ComboBoxItem>Basis-Überprüfung</ComboBoxItem>
                                        <ComboBoxItem>Standard-Diagnose</ComboBoxItem>
                                        <ComboBoxItem>Erweiterte Prüfung</ComboBoxItem>
                                        <ComboBoxItem>Tiefgehende Analyse</ComboBoxItem>
                                    </ComboBox>

                                    <Button x:Name="btnExportDiag" Content="Diagnosebericht exportieren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="230" Height="30" Margin="150,170,0,0" Background="LightGreen"/>
                                </Grid>
                            </GroupBox>

                            <TextBox x:Name="txtDiagOutput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="572" Height="257" Margin="660,30,0,0" 
                                     TextWrapping="NoWrap" VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas" FontSize="9" IsReadOnly="True"/>
                        </Grid>
                    </GroupBox>

                    <!-- Untere Sektion - Auditing -->
                    <GroupBox Header="DNS Auditing" Grid.Row="1" Margin="0,0,0,0">
                        <Grid>
                            <Button x:Name="btnEnableAudit" Content="Audit ON" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Height="30" Margin="20,10,0,0" Background="LightGreen"/>
                            <Button x:Name="btnDisableAudit" Content="Audit OFF" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Height="30" Margin="90,10,0,0" Background="LightCoral"/>
                            <Button x:Name="btnViewLogs" Content="Protokolle anzeigen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="130" Height="30" Margin="160,10,0,0" Background="LightSalmon"/>
                            <Button x:Name="btnExportLogs" Content="Protokolle exportieren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="130" Height="30" Margin="295,10,0,0" Background="LightSalmon"/>

                            <GroupBox Header="Audit-Einstellungen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="405" Height="148" Margin="20,55,0,0">
                                <Grid Height="134">
                                    <CheckBox x:Name="chkAuditZoneChanges" Content="Zonenänderungen protokollieren" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10,0,0" IsChecked="True"/>
                                    <CheckBox x:Name="chkAuditRecordChanges" Content="DNS-Eintragsänderungen protokollieren" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,40,0,0" IsChecked="True"/>
                                    <CheckBox x:Name="chkAuditQueries" Content="DNS-Abfragen protokollieren" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,70,0,0"/>
                                    <CheckBox x:Name="chkAuditServerEvents" Content="Server-Events protokollieren" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0" IsChecked="True"/>
                                </Grid>
                            </GroupBox>

                            <DataGrid x:Name="dgvAuditLogs" HorizontalAlignment="Left" VerticalAlignment="Center" Width="802" Height="193" Margin="430,0,0,0" 
                                      IsReadOnly="True" AutoGenerateColumns="False" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Zeitstempel" Binding="{Binding TimeStamp}" Width="150"/>
                                    <DataGridTextColumn Header="Ereignistyp" Binding="{Binding EventType}" Width="100"/>
                                    <DataGridTextColumn Header="Benutzer" Binding="{Binding User}" Width="150"/>
                                    <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="400"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Close Button Area -->
        <Grid Grid.Row="2">
            <Button x:Name="btnClose" Content="BEENDEN" Width="120" Height="35" HorizontalAlignment="Center" VerticalAlignment="Center" Background="LightCoral"/>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="3" Background="LightGray">
            <TextBlock x:Name="footerLabel" Text="© 2025 easyDNS V0.2.2 - Andreas Hepp - www.phinit.de / www.psscripts.de" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"/>
        </Grid>
    </Grid>
</Window>
